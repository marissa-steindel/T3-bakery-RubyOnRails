<h1 class="title is-3">Orders Collection</h1>

<table class="table is-striped">
<tr>
  <th>Invoice No.</th>
  <th>status</th>
  <th>transaction date</th>
  <th>payment_id</th>
  <th>customer</th>
  <th>GST</th>
  <th>HST</th>
  <th>PST</th>
  <th>total</th>
</tr>
  <% @orders.each do |o|%>
    <tr>
      <td><%=link_to o.id, order_path(o.id)%></td>
      <td><%= o.status %></td>
      <%# <td><%= select_tag(:status, options_for_select(%w[pending paid shipped])) %></td>
      <td><%= o.created_at.strftime('%m/%d/%Y %H:%M') %></td>
      <td><%= rand(111111..999999) %></td>
      <td><%= o.customer.name %></td>
      <td></td>
      <td></td>
      <td></td>
      <td><%= number_to_currency rand(9999)/100.0 %></td>
      <td> <%# button_to "update status"%> </td>
    </tr>
<% end %>

</table>